#!/usr/bin/env bash
set -euo pipefail

if [ -z "${1:-}" ]; then
    echo -e "Please specify the language you want to generate the .gitignore file for.\n"
    echo "Usage:"
    echo -e "  gitignore <LANGUAGE>\n"
    echo "For example:"
    echo "  gitignore python" 
    exit 1
fi

response="$(curl -sL https://www.gitignore.io/api/${1})"
echo -e "# Generated using https://aviskarkc10/gitignore${response}" >> .gitignore
